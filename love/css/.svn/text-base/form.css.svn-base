form {
font : 12px Verdana, Sans-serif;
margin : 0 0;
padding : 10px 0;
width : 100%;
}
fieldset {
padding : 10px 0;
margin : 0 0 15px 0;
background : #fff;
border-top:1px solid #ccc;
border-bottom: 1px solid #ccc;
background:#fcfcfc;
}
* html fieldset {
position : relative;
margin : 10px 0 30px 0;
padding : 20px 0;
}
* html legend {
position : absolute;
top : -1.2em;
left : 20px;
background:none;
}
fieldset legend {
font : normal 1.5em Helvetica, sans-serif;
padding : 10px 5px;
text-transform : normal;
background : none;
margin:0 0 0 10px;
}
form label {
display : block;
float : left;
width : 150px;
padding : 5px 10px 5px 0;
margin : 4px 0 0;
text-align : right;
color:#444;
}
form dfn {
margin : 0 10px;
}
form input, form textarea {
width : auto;
margin : 5px 0 5px 0;
padding:3px 3px 5px 3px;
border:1px solid #ddd;
border-top: 1px solid #999;
font:normal 14px Arial, Helvetica, sans-serif;
}

form input {}

form input#reset { margin-left : 0; }

textarea { overflow : auto; }

form small {
display : block;
margin : 0 0 0 160px;
padding : 0 3px 7px;
font-size : 88%;
font-weight:normal;
font-style:italic;
color:#666;
}
form .required {
font-weight : bold;
}
form br {
clear : left;
}

form textarea {width:200px;}

form .tiny {width:50px;}
form .small {width:100px;}
form .medium {width:200px;}
form .large {width:300px;}

form input:focus { background:#D8EFD1; border:1px solid #AADF99; }
form textarea:focus { background:#D8EFD1;}

select { width : auto; margin : 5px 0 2px 0; padding:3px 3px 5px 3px; border:1px solid #ddd; border-top: 1px solid #999; font: normal 12px Arial, Helvetica, sans-serif; }
