/***** Body Styles *****/
html,body { height:100%; overflow:hidden; }
body { background-color: #f6f4ff; text-align:center; font-family: "Trebuchet MS", "Trebuchet", Arial, Helvetica, sans-serif; color:#333; font-size:12px; }
p, label { padding: 0; margin:0; font-size:13px; color:#333333; }
p{ margin: 0 0 20px 0; line-height:18px; }
li { font-size:13px; color:#333333; margin-bottom:7px; }
h1 { font-size: 24px; color: #876f6d; margin:0; padding:0 0 24px 0;	font-weight: normal;}
h2 { color:#aaa5cc;	font-size: 20px; margin:0; padding:0 0 20px 0; font-weight: normal; }
h3 { font-size: 15px; color: #6f6f6f; margin:0 0 15px 0; padding:0; }
h4 { font-size: 13px; color: #6541b8; margin:0 0 15px 0; padding:0; }
h5 { font-size: 36px; color: #51466b; margin:0; padding:0; font-weight: normal; }
h6 { font-size: 18px; color: #51466b; margin-left: 15px; font-weight: normal; font-style: italic; }
a img {border:none;}
a { color:#98aab2;}
a:hover { text-decoration:none;	}
/***** Body Styles *****/


/***** Cloud Styles *****/
.content { height:100%; }
#contentWrapper { position:relative; overflow:hidden; height:100%; }
#cloudWrapper { background:#ffffff; position:absolute; left:0; width: 100%; z-index:1; }
.cloud-div { padding:50px; }
.cloud-div img {}
.loveCloudDiv { background-color:#ffffff; padding-bottom:0px; width:99%; height:99%; position:absolute; }
.cloud-div { overflow:hidden; padding-top:10px; }
.cloudlink, .cloudlink:hover { text-decoration: none !important; cursor: default !important; }
#feedWrapper { position: absolute; top:0; width: 100%; background:rgba(256,256,256,0.9); border-top:1px solid #cccccc; margin-top:13px; text-align:center; z-index:10; }
.feed-div {	margin-left:3%;	margin-right:3%; width: auto; }
#msg { color: black; font-size: 34px; font-family: helvetica, sans-serif; }
#date { color: #cccccc; font-style: italic; margin-left: 10px; }
/***** Cloud Styles *****/


/***** Form Styles *****/
input[type=submit]:active, input[type=submit].lgbutton:active { background-position: bottom right; color: #000; outline: none; border:none; -moz-outline-style: none; overflow:hidden; }	
input[type=submit]::-moz-focus-inner{ border: none; }
/***** Form Styles *****/

