				    </select>
				</label>
			</p>
		    <p>
				<label>Time (Pacific Time): </label>
			    <select name="updatehour" size="1">
					<?php foreach ($this->hours as $hour) : ?>
			        	<option value="<?php echo $hour ?>"<?php echo((isset($this->weeklyupdates) && ($this->weeklyupdates['hour'] == $hour)) ? ' selected="selected"' : '') ?>><?php echo(($hour < 10) ? '0' . $hour : $hour) ?></option>
					<?php endforeach; ?>
			    </select>:

			    <select name="updateminute" size="1">
					<?php foreach ($this->minutes as $min) : ?>
			        	<option value="<?php echo $min ?>"<?php echo((isset($this->weeklyupdates) && ($this->weeklyupdates['minute'] == $min)) ? ' selected="selected"' : '') ?>><?php echo(($min < 10) ? '0' . $min : $min) ?></option>
					<?php endforeach; ?>
			    </select>
			</p>
		</form>
	</div>
</div>
