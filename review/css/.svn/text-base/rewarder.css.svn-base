    -moz-border-radius: 6px;
    -webkit-border-radius: 6px;
    border-radius: 6px;
}

#throbber-holder, #rewarder_balance {
    background-color: #FFD;
    border: 2px solid #DCD998;
}

#rewarder_balance {
	margin: -15px 0px 10px;
	padding: 8px 8px 8px 12px;
	width: 180px;
}

#percentGrant {
	display:inline-block;
	text-align: center;
	margin-right:15px;
}

#balanceDetails {
	display:inline-block;
}

#totPointsAlloc {
	text-align:right;
	height:1px;
}

#totPointsGrant {
	text-align:right;
	margin-top:16px;
}

.balancePercent {
	font-size:26px;
	line-height:22px;
	font-weight:bolder;
}

.balanceData {
	display: inline-block;
	padding-left: 8px;
	text-align: left;
	width: 30px;
}

.balanceLabel {
	font-weight:bold;
}
#headers {
	border-left: 1px solid #CCC;
	border-right: 1px solid #CCC;
	border-top: 1px solid #CCC;
	clear: none;
	cursor: pointer;
	overflow:auto;
	font-weight: bold;
	margin-top: 12px;
	background-color:#eee;
	-moz-border-radius-topleft: 4px;
	-moz-border-radius-topright: 4px;
	-webkit-border-top-left-radius: 4px;
	-webkit-border-top-right-radius: 4px;
	border-top-right-radius:4px;
	border-top-left-radius:4px;
	height: 26px;
}
